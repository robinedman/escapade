<%= form_for(@activity) do |f| -%>
  <fieldset>
    <%= f.label :name%><br/>
    <%= f.text_field :name, autofocus: true %><br/>

    <%= f.label :description %><br/>
    <%= f.text_area :description, cols: 40, rows: 7 %><br/>
    <p>
      <%= f.submit class: 'btn btn-primary' %>
      <%= link_to 'Cancel', activities_path, class: 'btn btn-default' %>
    </p>
  </fieldset>
<% end %>
