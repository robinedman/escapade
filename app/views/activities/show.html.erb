<h1>Activity: <em><%= @activity.name %></em></h1>
<p><%= @activity.description %></p>

<nav>
  <p> 
    <%= link_to 'Edit', edit_activity_path(@activity), class: 'btn btn-info' %> 
    <%= link_to 'Delete', @activity, 
        method: :delete, data: { confirm: "Delete \"#{@activity.name}\"?"}, class: 'btn btn-danger' %>
    <%= link_to 'All Activities', activities_path, class: 'btn btn-default' %>
  </p>
</nav>
